<div class="jumbotron">
  <h1 class="display-4">
    <%= @project.title %>
  </h1>

  <h4 class="display-7">
    <%= @project.description%>
  </h4>

  <% if policy(@project).edit? %>
    <%= link_to 'Edit', edit_project_path(@project) %> |
  <% end %>

  <% if policy(@project).destroy? %>
    <%= link_to 'Delete', @project, method: :delete, data: { confirm:  I18n.t('project.sure_message') }, class: "btn btn-danger" %>
  <% end %>

  <%= link_to 'Back', projects_path %>
</div>

